# IMPORTANT: Update these values for production deployment

PORT=5000

# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/citiconnect
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/citiconnect

# Generate a strong JWT secret (use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_super_secure_jwt_secret_here_change_this

# Your Vercel frontend URL
CLIENT_URL=https://your-vercel-app.vercel.app

NODE_ENV=production
